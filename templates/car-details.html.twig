{% extends 'base.html.twig' %}

{% block title %}Car Details page{% endblock %}

{% block body %}

    <div id="fakeloader">
        <div class="spinner5">
            <div class="cube1"></div>
            <div class="cube2"></div>
        </div>
    </div>
    <div id="main-wrapper">

        <div class="rq-page-content"> <!-- start of page content -->
            <div class="rq-listing-details">
                <div class="rq-listing-single"> <!-- start of banner slider -->
                    <div class="rq-listing-gallery-post">
                        <div class="rq-gallery-content">
                            <div class="details-slider owl-carousel">
                                <div class="item">
                                    <img src="img/listing-detail2.png" alt="">
                                </div>
                                <div class="item">
                                    <img src="img/listing-detail.png" alt="">
                                </div>
                                <div class="item">
                                    <img src="img/listing-detail2.png" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- end of banner slider -->
                <div class="rq-content-block">
                    <div class="container">
                        <div class="rq-title-container bredcrumb-title text-center"> <!-- start of breadcrumb -->
                            <h1 class="rq-title light">Car Details</h1>
                            <ol class="breadcrumb secondary rq-subtitle">
                                <li><a href="#">Home</a></li>
                                <li><a href="#">Car listing</a></li>
                                <li class="active">Car Details</li>
                            </ol>
                        </div> <!-- end of breadcrumb -->
                        <div class="rq-listing-promo-wrapper">
                            <div class="row"> <!-- start of listing promo -->
                                <div class="col-md-12">
                                    <div class="rq-listing-promo-content">
                                        <div class="rq-listing-item">
                                            <h6 class="rq-listing-item-title">{{ vehicle.vehicleModel }}</h6>
                                            <h4 class="rq-listing-item-number">{{ vehicle.vehicleBrand }}</h4>
                                        </div>
                                        <div class="rq-listing-item">
                                            <h6 class="rq-listing-item-title">Class</h6>
                                            <h4 class="rq-listing-item-number">{{ vehicle.vehicleType }}</h4>
                                        </div>
                                        <div class="rq-listing-item">
                                            <h6 class="rq-listing-item-title">Doors</h6>
                                            <h4 class="rq-listing-item-number">{{ vehicle.vehicleDoorCount }}</h4>
                                        </div>
                                        <div class="rq-listing-item">
                                            <img src="img/listing-icon2.png" alt="">
                                            <h6 class="rq-listing-item-title">Transmission</h6>
                                            <h4 class="rq-listing-item-number">{{ vehicle.vehicleGearBoxType }}</h4>
                                        </div>
                                        <div class="rq-listing-item">
                                            <img src="img/listing-icon3.png" alt="">
                                            <h6 class="rq-listing-item-title">Seats</h6>
                                            <h4 class="rq-listing-item-number">{{ vehicle.vehicleSeatCount }}
                                                Adults</h4>
                                        </div>
                                        <div class="rq-listing-item">
                                            <img src="img/listing-icon5.png" alt="">
                                            <h6 class="rq-listing-item-title">Fuel Type</h6>
                                            <h4 class="rq-listing-item-number">{{ vehicle.vehicleFuelType }}</h4>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- end of listing promo -->
                        </div>
                        <div class="rq-feature-tab">
                            <div class="rq-blog-listing">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" role="tablist">
                                    <li role="presentation" class="active"><a href="#listing_tab_hor_1"
                                                                              aria-controls="listing_tab_hor_1"
                                                                              role="tab" data-toggle="tab">Features</a>
                                    </li>
                                </ul>
                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active" id="listing_tab_hor_1">
                                        <ul class="rq-listing-lists">
                                            <li class="checked">Airconditions</li>
                                            <li class="unchecked">Child Seats</li>
                                            <li class="checked">GPS</li>
                                            <li class="checked">Language</li>
                                            <li class="checked">Music</li>
                                            <li class="checked">Seat Belts</li>
                                            <li class="checked">Sleeping bags</li>
                                            <li class="checked">Water</li>
                                            <li class="checked">Bluetooth</li>
                                            <li class="unchecked">Onboard computer</li>
                                            <li class="checked">Audio Input</li>
                                            <li class="unchecked">Long term tips</li>
                                            <li class="checked">car kit</li>
                                            <li class="checked">Remote central looking</li>
                                            <li class="checked">climate control</li>
                                        </ul>
                                    </div>

                                </div>
                            </div>
                        </div>  <!-- ./edn feature tab -->
                        <div class="location-map">
                            <div class="listing-page-title">
                                <h3>Location</h3>
                            </div>
                            <div class="d-flex justify-content-center">
                                <iframe class="" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2827.661534672833!2d-0.5676325851058802!3d44.86918478096975!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd55285fb775946d%3A0xfa412f1d465b1c06!2s171%20Rue%20Lucien%20Faure%2C%2033300%20Bordeaux!5e0!3m2!1sfr!2sfr!4v1673560588141!5m2!1sfr!2sfr"
                                        width="700" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                            </div>

                        </div>
                    </div>
                </div> <!-- .end rq-content-block -->
                <div class="rq-content-block gray-bg">
                    <div class="listing-page-title">
                        <h3>Book Car Now</h3>
                    </div>
                    <div class="container">
                        <div class="rq-search-container marginBttm">
                            <div class="rq-car-booking-section">
                                <div class="booking-details marginTop">
                                    <div class="col-md-12">
                                        <h3 class="total-price marginTop mb-2">Total Booking Cost : <span>{{ vehicle.price }} $/day</span></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="rq-search-single search-btn">
                                <div class="rq-search-content">
                                    <div class="rq-btn rq-btn-primary fluid-btn">
                                        <button class="rq-btn rq-btn-primary btn-large"><a href="{{ path('app_checkout', {id: vehicle.id}) }}">Book Now </a><i
                                                    class="ion-android-car"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1"></div>


                    </div>

                </div> <!-- /.rq-content-block -->

            </div>
        </div> <!-- /.page-content -->
    </div> <!-- end #main-wrapper -->

    <script type="text/javascript" src="{{ asset('js/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/moment.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/scripts.js') }}"></script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD0QI6vd531_4xsTobCg_J1_6BZOEolRbs&libraries=visualization&callback=initMapListing">
    </script>
    <script src="{{ asset('js/mapdetails.js') }}" type="text/javascript"></script>

{% endblock %}
